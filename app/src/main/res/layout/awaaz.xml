<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#484848">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tbcca"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            android:background="#f9a825"
            app:titleTextColor="#fff"
            app:title="AWAAZ"
            android:foregroundTint="#696969"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:elevation="4dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="58dp"
                android:layout_toEndOf="@+id/awaaz2home"
                android:src="@drawable/awaaz_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/awaaz2home"
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:layout_margin="@dimen/fab_margin"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:tint="@color/clear"
                app:layout_anchor="@id/app_bar"
                app:layout_anchorGravity="bottom|end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.016"
                app:srcCompat="@drawable/home" />

            <ImageButton
                android:id="@+id/whatsappAwaaz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/fbAwaaz"
                android:layout_marginBottom="19dp"
                android:layout_toEndOf="@+id/awaaz2home"
                android:background="@drawable/whatsapp_icon" />

            <ImageButton
                android:id="@+id/fbAwaaz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/awaaz2home"
                android:layout_below="@+id/awaaz2home"
                android:background="@drawable/fb_icon" />

            <ImageButton
                android:id="@+id/callAwaaz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/awaaz2home"
                android:background="@drawable/call_icon"
                android:backgroundTint="@color/white"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="start"
            android:text="@string/awaaz_text"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="15.5sp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>






